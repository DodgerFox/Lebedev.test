.header
  position fixed
  width 100%
  z-index 10
  height 48px
  background-color white
  border-bottom 1px solid $mainwhite

  .wrap
    height 100%
    display flex
    align-items center
    justify-content space-between
    background-color white

  &-right
    display flex
    align-items center

  &-more
    display flex
    align-items center
    margin-left 23px
    cursor pointer
    t()
    &:hover
      opacity 0.75

.user
  display flex
  align-items center
  cursor pointer
  t()
  &:hover
    opacity 0.75

  &-avatar
    height 32px
    width 32px
    border-radius 50%
    background-color #333
    margin-right 8px
    background-size cover
    background-position center


    &__notif
      height 12px
      width 12px
      border-radius 50%
      background-color $main
      display flex
      align-items center
      justify-content center
      font-size 8px
      color white

  &__name
    font-size 14px
    white-space nowrap
    color $mainblack
    t()

.nav
  width 100%
  max-width 260px
  background-color white
  border-radius 4px
  box-shadow 0px 0px 12px rgba(57, 65, 74, 0.1)
  position absolute
  right 0
  top 55px
  z-index -1
  transform translateX(40px)
  pointer-events none
  opacity 0
  t()
  &.open
    transform translateX(0)
    pointer-events all
    opacity 1

  &-item
    t()
    a
      padding 12px 20px
      display flex
      align-items center
      position relative
      color $mainblack
      span
        font-size 8px
        color white
        border-radius 40px
        background-color $main
        padding 2px 6px
        margin-left 8px
      &:after
        content ''
        left 12px
        right 12px
        height 1px
        position absolute
        bottom 0
        background #E8EAED

    &:first-child
      a
        padding-top 14px

    &:last-child
      a
        padding-bottom 14px

    &:hover
      background #F2F5F7
