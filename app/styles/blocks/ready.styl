.ready
  padding-top 112px

  &-body
    padding-top 40px
    display flex
    justify-content space-between


.pictures
  display flex
  align-items center
  width 100%
  height 100%
  max-width 700px

  &-container
    height 205px
    width 100%
    display flex

  &-item
    width 25%
    padding 0 6px
    display flex
    flex-direction column
    align-items center

    &__image
      width 100%
      min-height 112px
      margin 18px 0
      background-size cover
      background-position center

    &__line
      height 100%
      width 1px
      background-color $mainwhite

    &:nth-child(odd)
      flex-direction column-reverse

.options
  &-item
    margin-bottom 12px
    display flex
    align-items center
    label
      white-space nowrap
      font-size 16px
      -webkit-user-select: none
      user-select: none
      cursor: pointer
      span
        display: inline-block
        vertical-align: middle
        transform: translate3d(0,0,0)
        &:first-child
          position: relative
          width: 24px
          height: 24px
          border-radius: 3px
          transform: scale(1)
          vertical-align: middle
          border: 1px solid $mainwhite
          transition: all .2s ease
          svg
            position: absolute
            top: 3px
            left: 2px
            fill: none
            stroke: #FFFFFF
            stroke-width: 2
            stroke-linecap: round
            stroke-linejoin: round
            stroke-dasharray: 16px
            stroke-dashoffset: 16px
            transition: all .3s ease
            transition-delay: .1s
            transform: translate3d(0,0,0)
          &:before
            content: ""
            width: 100%
            height: 100%
            background: #0088FF
            display: block
            transform: scale(0)
            opacity: 1
            border-radius: 50%
            pointer-events none
        &:last-child
          padding-left: 16px
      &:hover span:first-child
        border-color $main

      &:active span:first-child
        border-color $main
        background $main
        svg
          stroke-dashoffset: 0
          margin 3px
          stroke #eaeaea

.checkbox
  display none
.checkbox:checked + label
  span
    &:first-child
      background: #0088FF
      border-color: #0088FF
      animation: wave .4s ease
      svg
        stroke-dashoffset: 0
        margin 3px
      &:before
        transform: scale(3.5)
        opacity: 0
        transition: all .6s ease

@keyframes wave
  50%
    transform: scale(.9)
