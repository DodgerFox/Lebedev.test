.stock
  padding-top 44px
  padding-bottom 64px

  &-body
    display flex
    margin 0 -8px

  &-item
    width 33.333%
    padding 0 8px

  &-container
    box-shadow: 0px 12px 24px rgba(0, 0, 0, 0.03)
    border-radius 4px
    background white
    display flex
    align-items center
    padding 28px
    color $mainblack
    cursor pointer
    t()
    &:active
      background-color $main

    &:active
      color white
      .stock__text
        color rgba(255, 255, 255, 0.5);
        span
          color white
      .stock-circle
        span
          transform scale(1.3)
          span
            transform scale(0.78)

  &__number
    font-size 28px
    line-height 36px
    padding-bottom 4px

  &__text
    color $maingray
    font-size 16px
    line-height 24px
    t()
    span
      margin-left 8px
      color #15A479
      &.bad
        color #D82E2E

  &-circle
    height 88px
    width 88px
    padding 9px
    background-color rgba(47, 117, 236, 0.3)
    border-radius 50%
    &.violet
      background-color rgba(160, 84, 198, 0.3)
      span
        background-color #A054C6
    &.green
      background-color rgba(21, 164, 121, 0.3)
      span
        background-color #15A479
    span
      padding 9px
      background-color #2F75EC
      border-radius 50%
      width 100%
      height 100%
      display block
      display flex
      justify-content center
      align-items center
      t()
      span
        border 1px solid rgba(255, 255, 255, 0.2);


  &-wrap
    padding-left 24px
