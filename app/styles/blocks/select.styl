.select-hidden
  display: none
  visibility: hidden
  padding-right: 10px

.select
  cursor pointer
  display: inline-block
  position: relative
  font-size: 14px
  line-height 20px
  width: 100%
  height: 37px

.select-styled
  position: absolute
  top: 0
  right: 0
  left: 0
  border-bottom 1px solid #08f
  padding: 6px 15px
  padding-top 14px
  padding-left 0
  box-sizing border-box
  transition all 0.2s ease-in
  &:after
    content:""
    width: 11px
    height: 4px
    background-image url('../images/arrow.svg')
    background-size cover
    background-position center
    position: absolute
    top: 24px
    right: 6px
    transform rotate(180deg)
    t()

  &:active, &.active
    &:after
      transform rotate(0deg)
      background-image: url('../images/arrow-colored.svg')


.select-options
  display: none
  position: absolute
  top: 111%
  right: 0
  left: 0
  z-index: 999
  margin: 0
  padding: 4px 0
  list-style: none
  background-color white
  box-shadow: 0px 8px 12px rgba(57, 65, 74, 0.1)
  border-radius 2px

  li
    margin: 0
    padding: 8px 20px
    font-size 14px
    line-height 16px
    transition all 0.15s ease-in
    position relative
    &:after
      content ''
      left 12px
      right 12px
      height 1px
      position absolute
      bottom 0
      background #E8EAED
    &:hover
      background: #F2F5F7
    &[rel="hide"]
      display: none
